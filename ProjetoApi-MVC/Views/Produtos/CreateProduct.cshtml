@model ProjetoApi_MVC.Models.ProductViewModel

@{
    ViewData["Title"] = "Create Product";
}

<h2>Create Product</h2>

<form asp-action="CreateProduct" method="post" class="form-horizontal">
    @Html.AntiForgeryToken() <!-- Token anti-forgery para proteção -->

    <div class="form-group">
        <label asp-for="Nome" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="AnoDeFabricacao" class="control-label col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="AnoDeFabricacao" class="form-control" />
            <span asp-validation-for="AnoDeFabricacao" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-success" />
            <a asp-action="Index" class="btn btn-info">Back to List</a>
        </div>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
